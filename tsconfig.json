{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6"],
    "target": "es6",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src/**/*"]
}
